@model List<Product>

@section Footer {
  <div>
    Only for Index footer
  </div>
}

<table class="table">
  <thead>
    <tr>
      <th>Product ID</th>
      <th>Product Name</th>
      <th>Price</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var item in Model)
    {
      <tr>
        <td>@item.ProductId</td>
        <td>@item.ProductName</td>
        <td>@item.Price</td>
        <td>
          <a href="/Product/GetProduct/@item.ProductId">Detaylar</a>
        </td>
      </tr>
    }
  </tbody>
</table>
