@model Product

<div class="row">
    <div class="col-md-12">
        <div class="text-center">
            <div class="display-6">
                @Model.ProductName
            </div>
            <img class="img-fluid shadow rounded-3 my-3" src="@Model?.ImageUrl" alt="@Model.ProductName">
            <p class="lead text-danger">@Model.Price.ToString("c")</p>
        </div>
    </div>
</div>

<div class="text-center">
    <div class="btn-group">
        <a class="btn btn-outline-primary" asp-controller="Home" asp-action="Index">
            <i class="fa fa-building"></i>
            Home
        </a>
        <form asp-page="/cart" id="@Model.ProductId" method="post">
        <input type="hidden" asp-for="ProductId">
        <input type="hidden" name="returnUrl" value="ViewContext.HttpContext.Request.PathAndQuery">
        <button type="submit" class="btn btn-outline-primary">
            <i class="fa fa-cart-plus"></i>
        </button>
        </form>
        <a class="btn btn-outline-primary" asp-controller="Product"         asp-action="IndexView">
            <i class="fa fa-list"></i>
            Product
        </a>
    </div>
</div>

@section Header {
    <div>
        Header for only Get
    </div>
}